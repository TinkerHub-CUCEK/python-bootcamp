#CALCULATOR
print("CALCULATOR")
print("1.ADDITION")
print("2.SUBTRACTION")
print("3.MULTIPLY")
print("4.DIVIDE")

choice=int(input("Enter your choice from the keyboard "))

if choice==1:
    a=int(input("Enter the 1st number"))
    b=int(input("Enter the 2nd number"))
    c=a+b
    print("Sum of two numbers is = ",c)
elif choice==2:
    a=int(input("Enter the 1st number"))
    b=int(input("Enter the 2nd number"))
    c=a-b
    print("Difference of two numbers is = ",c)
elif  choice==3:
    a=int(input("Enter the 1st number"))
    b=int(input("Enter the 2nd number"))
    c=a*b
    print("Product of two numbersb is = ",c)
elif choice==4:
    a=int(input("Enter the 1st number"))
    b=int(input("Enter the 2nd number"))
    c=a/b
    print("Quotient is = ",c)
else:
    print("Invalid menu option")
